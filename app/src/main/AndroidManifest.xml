<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.michaelguerrero.android.mycard">
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>  <!-- read access permission -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS"></uses-permission> <!-- write access permission -->
    <uses-permission android:name="android.permission.READ_PROFILE"></uses-permission> <!-- read access permission for user's profile -->
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Controller.ContactDetailsActivity">
        </activity>
    </application>

</manifest>